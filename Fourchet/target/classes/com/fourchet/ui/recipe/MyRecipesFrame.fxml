<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fourchet.ui.recipe.MyRecipesController" fx:id="myRecipesFrame">
    <top>
        <Button onAction="#goToRecipeCreateFrame" text="Create new recipe" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" top="10.0" />
            </BorderPane.margin></Button>
    </top>
    <center>
        <ScrollPane prefHeight="400.0" prefWidth="600.0">
            <content>
                <StackPane prefWidth="600.0">
                    <VBox fx:id="listOfRecipes" prefHeight="200.0" prefWidth="100.0" spacing="10.0" />
                </StackPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
