<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="activityFrame" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fourchet.ui.account.activities.ActivityController">
    <top>
        <Text fx:id="nameOfActivity" BorderPane.alignment="TOP_CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Text>
    </top>
    <left>
        <GridPane alignment="TOP_CENTER" hgap="10" vgap="10">
            <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Text fx:id="location" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Text fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
        </GridPane>
    </left>
   <center>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <content>
            <StackPane prefWidth="600.0">
                <VBox fx:id="listOfCategories" prefHeight="200.0" prefWidth="100.0" spacing="10.0" />
            </StackPane>
        </content>
      </ScrollPane>
   </center>

</BorderPane>
