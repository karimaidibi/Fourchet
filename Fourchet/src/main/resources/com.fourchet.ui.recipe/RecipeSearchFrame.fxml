<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="GeneralPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fourchet.ui.recipe.RecipeSearchController">
    <bottom>
        <AnchorPane prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER" />
    </bottom>
    <top>
        <GridPane prefHeight="100.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: grey;" />
                <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: grey;" GridPane.columnIndex="1" />
                <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: grey;" GridPane.columnIndex="2" />
            </children>
        </GridPane>
    </top>
    <center>


        <VBox alignment="CENTER">
            <children>
                <VBox alignment="CENTER">
                    <HBox alignment="CENTER_LEFT" maxWidth="-Infinity" prefWidth="400.0">
                        <TextField fx:id="searchField" />
                        <Button fx:id="searchButton" text="Rechercher" onAction="#search" />
                        <Label text="Filtres :" />
                        <ChoiceBox prefWidth="150.0">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Tous" />
                                    <String fx:value="Entrée" />
                                    <String fx:value="Plat" />
                                    <String fx:value="Dessert" />
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </HBox>
                </VBox>

                <ListView fx:id="recipeList" editable="true" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="600.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <HBox spacing="10.0">
                                <children>
                                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@Circle-icons-profile.svg.png" />
                                        </image>
                                    </ImageView>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <children>
                                            <VBox>
                                                <children>
                                                    <Label prefWidth="213.0" text="Author" />
                                                    <Label text="Title" />
                                                    <Label text="Description" />
                                                </children>
                                            </VBox>
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER">
                                        <children>
                                            <Button text="Lire" />
                                        </children>
                                    </HBox>
                                </children>
                            </HBox>
                            <!-- Ajoutez autant d'éléments HBox que de recettes à afficher -->
                        </FXCollections>
                    </items>
                </ListView>
            </children>
        </VBox>



    </center>
</BorderPane>
