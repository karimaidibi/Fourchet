<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fourchet.ui.account.activities.ActivitiesController">
<top>
    <Button text="Add new activity" onAction="#goToAddActivity" />
</top>
<center>
    <ScrollPane prefHeight="400.0" prefWidth="600.0">
        <content>
            <StackPane>
                <VBox fx:id="listOfActivities" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <StackPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@card1.png" />
                                    </image>
                                </ImageView>
                                <Label text="Card 1" />
                            </children>
                        </StackPane>
                        <StackPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@card2.png" />
                                    </image>
                                </ImageView>
                                <Label text="Card 2" />
                            </children>
                        </StackPane>
                    </children>
                </VBox>
            </StackPane>
        </content>
    </ScrollPane>
</center>
</BorderPane>
