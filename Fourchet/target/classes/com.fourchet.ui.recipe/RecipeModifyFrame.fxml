<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="GeneralPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fourchet.ui.recipe.RecipeModifyController">
    <bottom>
        <AnchorPane prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER" />
    </bottom>
    <top>
        <GridPane prefHeight="100.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: grey;" />
                <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: grey;" GridPane.columnIndex="1" />
                <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: grey;" GridPane.columnIndex="2" />
            </children>
        </GridPane>
    </top>
    <center>

        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="689.0" xmlns="http://javafx.com/javafx/16">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label text="Modifier ma recette" />
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2">
                            <children>
                                <HBox maxWidth="100.0" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: green; -fx-background-radius: 1000;">
                                    <children>
                                        <ImageView fx:id="imageProfile" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@Circle-icons-profile.svg.png" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
                            <children>
                                <Button fx:id="buttonPicture" mnemonicParsing="false" onAction="#ChangePicture" text="Ajouter une photo" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="658.0">
                    <children>
                        <GridPane alignment="CENTER" maxWidth="-Infinity" prefHeight="30.0" prefWidth="600.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="Titre" />
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                                    <children>
                                        <TextField fx:id="titleRecipe" />
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                    </children></VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <GridPane maxWidth="-Infinity" prefWidth="600.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="Description" />
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                                    <children>
                                        <TextField fx:id="descriptionRecipe" prefHeight="200.0" prefWidth="200.0" />
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                    </children></VBox>
                <VBox alignment="CENTER" prefHeight="300.0" prefWidth="100.0">
                    <children>
                        <GridPane alignment="CENTER" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="Ingrédient" />
                                        <ListView fx:id="ingredientList" maxWidth="-Infinity" prefHeight="200.0" prefWidth="200.0">
                                            <items>
                                                <!-- Ingrédients disponibles -->
                                                <FXCollections fx:factory="observableArrayList">
                                                    <Label text="Farine" />
                                                    <Label text="Oeufs" />
                                                    <Label text="Beurre" />
                                                    <Label text="Sucre" />
                                                    <Label text="Lait" />
                                                    <Label text="Levure chimique" />
                                                </FXCollections>
                                            </items>
                                        </ListView>
                                    </children>
                                </VBox>
                                <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                                    <children>
                                        <ListView fx:id="selectedIngredientList" maxWidth="-Infinity" prefHeight="200.0" prefWidth="200.0">
                                            <items>
                                                <!-- Ingrédients sélectionnés -->
                                                <FXCollections fx:factory="observableArrayList" />
                                            </items>

                                        </ListView>
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <HBox maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="1000.0">
                    <children>
                        <VBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" minWidth="200.0" prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <Label text="Etapes" />
                                <TextField fx:id="stepField" prefWidth="200.0">
                                    <VBox.margin>
                                        <Insets bottom="20.0" />
                                    </VBox.margin>
                                </TextField>
                                <!-- Bouton pour ajouter une étape -->
                                <Button fx:id="addStepButton" onAction="#addStep" text="Ajouter" />
                            </children>
                            <HBox.margin>
                                <Insets left="94.0" right="50.0" />
                            </HBox.margin>
                        </VBox>
                        <!-- ListView pour afficher les étapes sélectionnées -->
                        <ListView fx:id="selectedStepList" layoutY="50.0" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="Modifier" mnemonicParsing="false" onAction="#Modifier" text="Modifier" />
                    </children>
                </VBox>
            </children>
        </VBox>

    </center>
</BorderPane>
